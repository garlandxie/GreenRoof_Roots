isbn = {0925-8574},
issn = {09258574},
journal = {Ecological Engineering},
keywords = {Biodiversity,Competition,Drought stress,Facilitation,Nurse plant,Roof garden,facilitation,green roofs,sedum},
mendeley-tags = {facilitation,green roofs,sedum},
number = {11},
