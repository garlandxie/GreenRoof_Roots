doi = {10.1016/j.ecoleng.2016.05.028},
file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Drayer, Richter - 2016 - Physical wetland characteristics influence amphibian community composition differently in constructed wetlands.pdf:pdf},
