file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Schmidtke, Gaedke, Weithoff - 2010 - A mechanistic basis for underyielding in phytoplankton communities.pdf:pdf},
isbn = {0012-9658},
issn = {0012-9658},
journal = {Ecology},
keywords = {Biomass production,Functional diversity,Negative dominance effect,Overyielding,Phytoplankton,Primary producer,Resource use complementarity,Species richness,Underyielding},
month = {jan},
number = {1},
pages = {212--221},
