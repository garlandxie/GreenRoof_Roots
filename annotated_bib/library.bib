file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/M{\"{u}}ller, Hauzy, Hulot - 2012 - Ingredients for protist coexistence competition, endosymbiosis and a pinch of biochemical interactions.pdf:pdf},
