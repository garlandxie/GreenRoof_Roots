isbn = {0027-8424},
issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
month = {nov},
number = {48},
pages = {20840--20845},
pmid = {21098285},
title = {{Biodiversity can support a greener revolution in Africa}},
