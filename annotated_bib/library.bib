isbn = {1435-8603 (Print)},
issn = {14358603},
journal = {Plant Biology},
keywords = {Biodiversity,Leaf area ratio,Leaf carbohydrates,Leaf nitrogen,Phenotypic plasticity,Productivity,Specific leaf area},
month = {sep},
