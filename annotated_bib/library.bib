doi = {10.1016/j.agee.2008.06.015},
isbn = {0167-8809},
issn = {01678809},
journal = {Agriculture, Ecosystems and Environment},
keywords = {Cultivation,Ecosystem services,Eucalypt woodlands,Fertilization,Grazing,Leaf dry matter content,Pasture,Plant functional traits,Specific leaf area},
number = {4},
pages = {251--258},
title = {{The role of plant leaf attributes in linking land use to ecosystem function in temperate grassy vegetation}},
volume = {128},
year = {2008}
}
@article{Faulwetter2009c,
