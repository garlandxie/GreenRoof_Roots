file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Fonseca et al. - 2000 - Shifts in trait-combinations along rainfall and phosphorus gradients.pdf:pdf},
isbn = {0022-0477},
