doi = {10.1016/j.agee.2016.06.035},
file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Barkaoui, Roumet, Volaire - 2016 - Mean root trait more than root trait diversity determines drought resilience in native and cultivated.pdf:pdf},
issn = {01678809},
journal = {Agriculture, Ecosystems and Environment},
keywords = {Aboveground biomass,Grasslands,Plant functional traits,Plant water-use,Root morphology,Rooting depth},
pages = {122--132},
publisher = {Elsevier B.V.},
title = {{Mean root trait more than root trait diversity determines drought resilience in native and cultivated Mediterranean grass mixtures}},
