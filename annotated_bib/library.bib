issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
month = {nov},
number = {46},
pages = {18123--18128},
pmid = {17991772},
title = {{Impacts of plant diversity on biomass production increase through time because of species complementarity}},
url = {http://www.pnas.org/cgi/doi/10.1073/pnas.0709069104},
