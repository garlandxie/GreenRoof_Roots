file = {::},
journal = {Ecology},
keywords = {biodiversity,community biomass,ecosystem functioning,ecosystem stability,productivity},
number = {8},
pages = {1697--1707},
title = {{Biodiversity Simultaneously Enhances the Production and Stability of Community Biomass, but the Effects Are Independent}},
volume = {94},
year = {2013}
}
