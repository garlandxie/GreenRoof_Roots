journal = {Restoration Ecology},
keywords = {abundance of invasive poa,conservation,grazing,implications for practice,integrated land use,invasive species,native festuca campestris grass-,northern grassland,poa pratensis,pratensis should be reduced,prior to revegetation with,restoration},
