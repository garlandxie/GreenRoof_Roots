file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Delory et al. - 2017 - Accuracy and bias of methods used for root length measurements in functional root research.pdf:pdf},
isbn = {4955139574},
