journal = {Journal of Plant Ecology},
keywords = {28,28 march 2008 accepted,28 march 2008 revised,biodiversity experiments d mixtures,d,d sampling bias,monocultures d overyielding analysis,received},
month = {jun},
number = {2},
pages = {95--102},
title = {{Biodiversity effects and transgressive overyielding}},
url = {https://academic.oup.com/jpe/article-lookup/doi/10.1093/jpe/rtn011},
volume = {1},
