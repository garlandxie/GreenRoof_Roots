file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Sturlud{\'{o}}ttir et al. - 2014 - Benefits of mixing grasses and legumes for herbage yield and nutritive value in Northern Europe and Canada.pdf:pdf},
isbn = {1365-2494},
