editor = {Hui, Dafeng},
file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Wooliver et al. - 2014 - Evolutionary history and novel biotic interactions determine plant responses to elevated CO2 and nitrogen ferti.pdf:pdf},
isbn = {1932-6203},
