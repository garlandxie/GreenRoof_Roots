@article{Losos2008,
abstract = {Ecologists are increasingly adopting an evolutionary perspective, and in recent years, the idea that closely related species are ecologically similar has become widespread. In this regard, phylogenetic signal must be distinguished from phylogenetic niche conservatism. Phylogenetic niche conservatism results when closely related species are more ecologically similar that would be expected based on their phylogenetic relationships; its occurrence suggests that some process is constraining divergence among closely related species. In contrast, phylogenetic signal refers to the situation in which ecological similarity between species is related to phylogenetic relatedness; this is the expected outcome of Brownian motion divergence and thus is necessary, but not sufficient, evidence for the existence of phylogenetic niche conservatism. Although many workers consider phylogenetic niche conservatism to be common, a review of case studies indicates that ecological and phylogenetic similarities often are not related. Consequently, ecologists should not assume that phylogenetic niche conservatism exists, but rather should empirically examine the extent to which it occurs.},
annote = {Intro:
- ecologists are adopting an evolutionary perspective; e.g. compare the degree of phylogenetic relatedness of community members to that of speices source pools 
- a common method is incoporating the idea that closely related species are ecologically similar; two different apporaches
(1) phylogenetic signals - characters evolve under BM models; time since divergence is correlated with degree of phenotypic similarity 
(2) phylogenetic niche conservatism - some factor is causing closely related species to more ecologically similar than by random chance (BM models)
- goal of paper is to clarify the difference between phylogenetic signal and PNC

What is PNC?
- observation that related species differ less ecologically than might be expected if ecological diversification had occured in an unconstrained manner

How prevalent are PNC and Phylo-signals?
- two approaches to documet PNC
(1) detection of old clades that show little ecological variation among species 
(2) statistical approach -
for PNC to occur, phylogenetic signal would have be even greater than expected to result from Brownian motion
(3) documentation of phylogenetic signal is necessary, but not sufficient, to demonstrate PNC - lack of phylo signal is enough to say that PNC doesn't exist
(4) mixed results in how phenotypic similarity is linked to ecological similarity; possible to use morphological characters as surrogates for ecological vairation
(5) phylogenetic signal show s up in some clades, but not others 

What does this all mean?
- researchers should collect requisite ecological data, and test whether ecological similairty among species is statistically associated with phylogentic relatedness
- phylogenetic composition of communities is not possible without actual ecological data for the constituent species; hard to interpret clustering/overdispersion (closely-related species can still be ecological divergent)
- any situation that promotes convergent evolution among extant species is likely to lead to little or no phylogentic signal

Sampling, scale and phylogenetic signal
- community vs clade perspective
(1) competitive exclusion may lead to distantly related species (diminishes PNC)
(2) closely related species may diverge ecologically in sympatry to minimize resource overlap (diminishes phylogenetic signal)
(3) suites of distantly related species convergently adapted to the same ecological conditions

Phylogenetic scale
- signal may be revealed if phylogenetic scale is greatly expanded
- but, a greater phylo scale may decrease PNC if between-clade convergence has occured
- sampling should be random and ideally as complete as possible to get an unbiased estimated

PNC: pattern or process
- pattern: historical patterns manifests on a phylogeny; a descrition of what happened, but not a statement on how it happened.},
author = {Losos, Jonathan B.},
doi = {10.1111/j.1461-0248.2008.01229.x},
file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Unknown - 2008 - IDEA AND Phylogenetic niche conservatism , phylogenetic signal and the relationship between phylogenetic relatedness an.pdf:pdf},
journal = {Ecology Letters},
keywords = {1007,11,2008,995,ecology letters,phylogenetic effect,phylogenetic niche conservatism,phylogenetic signal},
number = {11},
pages = {995--1007},
title = {{Phylogenetic niche conservatism , phylogenetic signal and the relationship between phylogenetic relatedness and ecological similarity among species}},
year = {2008}
}
@article{WOS169,
