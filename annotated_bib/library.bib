isbn = {0029-8549},
issn = {0029-8549},
journal = {Oecologia},
keywords = {abstract assessing the effects,divergence,ecological gradient,environmental filters,functional convergence,niche space,of environmental con-,often relies on methods,straints on community structure},
number = {1},
pages = {181--188},
title = {{CWM and Rao's quadratic diversity: a unified framework for functional ecology}},
