file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Lundholm, Richardson - 2010 - Habitat analogues for reconciliation ecology in urban and industrial environments.pdf:pdf},
journal = {Journal of Applied Ecology},
number = {5},
pages = {966--975},
title = {{Habitat analogues for reconciliation ecology in urban and industrial environments}},
