isbn = {2624623000},
issn = {1752-9921},
journal = {Journal of Plant Ecology},
keywords = {Analysis Of Variance,BEF-China,Contrasts,Linear Models,Mixed Models,Non-Orthogonality,Repeated Measures,Variance Components},
month = {feb},
number = {1},
pages = {91--110},
title = {{A guide to analyzing biodiversity experiments}},
url = {https://academic.oup.com/jpe/article-lookup/doi/10.1093/jpe/rtw107},
