file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Jim, Chen - 2011 - Bioreceptivity of buildings for spontaneous arboreal flora in compact city environment.pdf:pdf},
isbn = {1618-8667},
issn = {16188667},
journal = {Urban Forestry and Urban Greening},
keywords = {Arboreal colonization,Bioreceptivity,Building microhabitat,Ruderal vegetation,Spontaneous vegetation,Urban biodiversity},
number = {1},
pages = {19--28},
publisher = {Elsevier GmbH.},
title = {{Bioreceptivity of buildings for spontaneous arboreal flora in compact city environment}},
