doi = {10.1007/s11104-006-9096-1},
file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Ryser - 2006 - The mysterious root length.pdf:pdf},
