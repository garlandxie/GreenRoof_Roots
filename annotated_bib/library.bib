keywords = {Biodiversity,Environmental fluctuation,Phylogenetic diversity,Temporal stability,The insurance effect},
number = {2},
pages = {176--187},
title = {{Phylogenetic diversity stabilizes community biomass}},
url = {https://academic.oup.com/jpe/article-abstract/7/2/176/932599},
volume = {7},
