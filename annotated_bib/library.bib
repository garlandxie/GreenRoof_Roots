isbn = {0169-2046},
issn = {01692046},
journal = {Landscape and Urban Planning},
keywords = {Green roofs,Hymenoptera: Apoidea: Anthophila,Native bees,Pollinator conservation,Urban ecology},
number = {1},
pages = {102--108},
publisher = {Elsevier B.V.},
title = {{A comparison of bee communities of Chicago green roofs, parks and prairies}},
url = {http://dx.doi.org/10.1016/j.landurbplan.2011.07.004},
