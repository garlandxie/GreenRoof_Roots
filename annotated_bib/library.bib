journal = {Plant and Soil},
keywords = {Arctic plants,BIOLOG Gen III, D-serine,Functional diversity,Rhizosphere bacterial diversity,T-RFLP},
number = {1-2},
pages = {319--332},
title = {{Plants impact structure and function of bacterial communities in Arctic soils}},
volume = {399},
year = {2016}
