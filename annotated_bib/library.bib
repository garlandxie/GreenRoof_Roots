doi = {10.1002/ecy.1748},
file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Niklaus et al. - 2017 - Can niche plasticity promote biodiversity–productivity relationships through increased complementarity.pdf:pdf},
isbn = {4955139574},
