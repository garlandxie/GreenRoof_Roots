file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Khalsa et al. - 2014 - Effects of species richness and functional groups on chemical constituents relevant for methane yields from anaer.pdf:pdf},
isbn = {0142-5242},
issn = {01425242},
journal = {Grass and Forage Science},
keywords = {Bioenergy,Digestibility,Diversity,Fibre,Functional groups,Methane},
month = {mar},
number = {1},
pages = {49--63},
title = {{Effects of species richness and functional groups on chemical constituents relevant for methane yields from anaerobic digestion: results from a grassland diversity experiment}},
