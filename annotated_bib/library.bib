file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Pufal, Klein - 2013 - Post-dispersal seed predation of three grassland species in a plant diversity experiment.pdf:pdf},
isbn = {1752-9921},
