keywords = {Mimulus (monkeyflowers),intraspecific variation,plant functional trait,sampling decisions,species similarity},
number = {7},
pages = {2273--2285},
pmid = {28405291},
title = {{Trait dimensionality and population choice alter estimates of phenotypic dissimilarity}},
volume = {7},
year = {2017}
}
