doi = {10.1371/journal.pone.0104679},
file = {:C$\backslash$:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Fortel et al. - 2014 - Decreasing abundance, increasing diversity and changing structure of the wild bee community (hymenoptera anthophi.pdf:pdf},
isbn = {1932-6203},
issn = {19326203},
journal = {PLoS ONE},
number = {8},
pmid = {25118722},
title = {{Decreasing abundance, increasing diversity and changing structure of the wild bee community (hymenoptera: anthophila) along an urbanization gradient}},
volume = {9},
year = {2014}
}
