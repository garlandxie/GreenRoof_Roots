month = {feb},
number = {2},
pages = {529--535},
title = {{Complementarity effects do not necessarily result in significant transgressive over-performance in mixtures}},
url = {http://link.springer.com/10.1007/s10530-014-0755-5},
volume = {17},
year = {2015}
