isbn = {00380717},
issn = {00380717},
journal = {Soil Biology and Biochemistry},
keywords = {BIOLOG,Bacterial activity,Bacterial diversity,Grasslands,Microbial biomass,Microbial respiration,Plant species diversity},
month = {aug},
