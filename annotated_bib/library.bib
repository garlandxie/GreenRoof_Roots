isbn = {1439-0108},
issn = {14390108},
journal = {Journal of Soils and Sediments},
keywords = {Benthic oxygen fluxes,Biodiversity,Bioturbation,Functional groups,Macrobenthic communities,Trophic guilds},
month = {dec},
